# Base de données MySQL
DATABASE_URL="mysql://username:password@localhost:3306/ruachconnect"
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=ruachconnect
DATABASE_USER=root
DATABASE_PASSWORD=your_mysql_password

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=24h

# Upload de fichiers
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png
STORAGE_PATH=./uploads/photos
STORAGE_URL=http://localhost:3000/uploads

# Email (notifications futures - optionnel)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@ruachconnect.church
SMTP_PASSWORD=your_email_password

# Application
APP_NAME=RuachConnect
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:3000
PORT=3000

